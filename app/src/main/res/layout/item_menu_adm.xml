<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bd_bottom"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <!--        Gambar-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/gambarKos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kos" />
            </LinearLayout>
            <!--        Deskripsi-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <!--            tipe-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:gravity="fill_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tipeKos"
                        android:layout_width="74dp"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/border_abu"
                        android:gravity="center"
                        android:text="Kost Campur"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="0dp"
                        android:src="@drawable/ic_love" />
                </RelativeLayout>
                <!--            Nama Kos-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namaKos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center_vertical"
                        android:text="Kost Indah Permata Kekalik Jaya"
                        android:textFontWeight="700"
                        android:textSize="14dp" />
                </LinearLayout>
                <!--            Lokasi Kos-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/lokasiKos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Mataram" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fasilitasKos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="700"
                        android:fontFamily="@font/poppinsregular"
                        android:text="AC • K. Mandi Dalam • Kasur • Lemari • WiFi"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hargaKost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppinbold"
                        android:text="Rp1.050.000 / bln" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/btn_edit"
                        android:layout_width="190dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_biru"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"
                        android:text=" Edit "
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/btn_hapus"
                       android:layout_width="190dp"
                       android:layout_height="35dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:background="@drawable/bg_merah"
                       android:fontFamily="@font/poppinsregular"
                       android:gravity="center"
                       android:text=" Hapus "
                       android:textColor="@color/white"
                       android:textSize="16sp" />
               </LinearLayout>


            </LinearLayout>

    </LinearLayout>
</LinearLayout>